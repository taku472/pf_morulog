<div class="container mt-5 ">
  <h2>登録会員一覧</h2>
  <table class="table table-hover ">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>誕生日</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.full_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.birthday %></td>
          <td><% if customer.is_deleted == false %>
                有効
              <% else %>
                退会済み
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>