<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3">新規会員登録</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-4 col=4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :first_name, placeholder:"姓 例）盛本", class: "form-control offset-1 col-5" %>
          <%= f.text_field :last_name, placeholder:"名 例）萌流美", class: "form-control offset-1 col-5" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :誕生日, class: "brown-border px-3" %><br>
        <%= f.date_select :birthday, use_month_numbers: true,
          start_year: 1990, #入力値の開始位置(西暦)
          end_year: (Time.now.year - 10) #入力値の終了位置(現在から10年前に指定)
        %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "brown-border px-3" %>
        <% if @minimum_password_length %>
        <em>(最低<%= @minimum_password_length %>文字必要です。)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :確認用パスワード, class: "brown-border px-3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="row">
        <%= f.submit "会員登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

  <div class="row">
    <div class="offset-3 mt-5">
      <strong class="red-border px-3 pb-1">既に登録済みの方</strong>
    </div>
  </div>

  <div class="row">
    <div class="offset-4 mx-auto mt-5">
      <%= render "public/shared/links" %>
    </div>
  </div>
