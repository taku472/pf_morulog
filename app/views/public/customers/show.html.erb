<!-- ユーザーの詳細 -->
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>Customer</h2>
    <table class="table">
      <thead>
        <tr>
          <th>トップ画</th>
          <th>名前</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= image_tag @customer.get_profile_image(100, 100) %></td>
          <td><%= @customer.full_name %></td>
          <td><%= link_to "プロフィール編集", edit_customer_path %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<!-- ユーザーの投稿一覧、 部分テンプレート -->
<%= render 'public/posts/list', posts: @posts %>