<div class="card-list-container py-5">
  <% posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to public_post_path(post.id) do %>
      <%= image_tag post.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.customer.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(public_post_path(post.id), class:"text-dark") do %>
            <strong><i class="far fa-flag"></i><span><%= post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post.body %></p>
          <span><i class="fas fa-user"></i> By <%= post.customer.full_name %> | </span>
          <span><%= link_to "#{post.comments.count}コメント",public_post_path(post.id), class:"text-dark" %></span>
          <% post.tags.each do |tag| %>
            <span><%= tag.name %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate posts %>
</div>
