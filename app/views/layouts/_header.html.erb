<header>
  <div class="row justify-content-center">
  <%= link_to root_path, :style => "color: #000000;", class:"navbar-brand" do %>
    <h2><%= image_tag asset_path("IMG_8023"), size: "280x90" %></h2>
  <% end %>
  </div>
  <nav class="navbar navbar-expand-lg navbar-light bg-info">
    <div class="container">

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse" id="navbarNavDropdown" >
    <ul class="navbar-nav mr-auto justify-content-start">
      <% if customer_signed_in? %>
      <li><p class="logincustomer nav-link text-light">ようこそ<%= current_customer.first_name + current_customer.last_name %>さん！</p></li> <!--  文字の位置と色  -->
      <li>
        <%= link_to customer_path(current_customer.id), class: "nav-link text-light" do %>
        <i class="fas fa-user"></i>マイページ
        <% end %>
      </li>
      <li>
        <%= link_to new_public_post_path, class: "nav-link text-light" do %>
        <i class="fa fa-map-pin"></i>投稿フォーム
        <% end %>
      </li>
      <li>
        <%= link_to customers_path, class: "nav-link text-light" do %>
        <i class="fa fa-users"></i>ユーザー一覧
        <% end %>
      </li>
      <li>
        <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-light" do %>
        <i class="fas fa-sign-out-alt "></i>ログアウト
        <% end %>
      </li>
       <% elsif admin_signed_in? %>
        <li class"nav-item">
         <%= link_to admin_genres_path, class: "nav-link text-white" do %>
            ジャンル一覧
         <% end %>
        </li>
        <li class"nav-item">
         <%= link_to admin_customers_path, class: "nav-link text-white" do %>
            会員一覧
         <% end %>
         </li>
         <li class"nav-item">
          <%= link_to admin_comments_path, class: "nav-link text-white" do %>
            コメント一覧
          <% end %>
         </li>
        <li class"nav-item">
         <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-white" do %>
            ログアウト
         <% end %>
        </li>
      <% else %>
      <li>
        <%= link_to new_customer_registration_path, class: "nav-link text-light" do %>
        <i class="fas fa-user-plus"></i>新規登録
        <% end %>
      </li>
      <li>
        <%= link_to new_customer_session_path, class: "nav-link text-light" do %>
        <i class="fas fa-sign-in-alt"></i>ログイン
        <% end %>
      </li>
      <% end %>
    </ul>
      <%= render "searches/search" %>
      </div>
    </div>
  </nav>
</header>